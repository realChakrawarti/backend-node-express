extends ../layouts/main-layout.pug 

block content 
  main
    if data.length > 0
      h1 All products
      .listing
        .listing-container
          each item in data
            div.listing-item
              div 
                p  #{item.title}
                div.listing-actions
                  a(href=`product/${item._id}`) Details
                  a(href=`admin/edit-product/${item._id}`) Edit
                  form(action="admin/delete-product" method="POST")
                    button(type="submit") Delete
                    input(type="hidden" name="productId" value=`${item._id}`)
              form(action="/cart" method="POST" style="align-self: flex-end")
                button(type="submit") Add to Cart
                input(type="hidden" name="productId" value=`${item._id}`)
    else 
      h1 No products 